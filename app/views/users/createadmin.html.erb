<h1>Create Admins</h1>


<%= form_for @user, :url => {:controller => 'users' , :action => 'create'} do |f| %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Confirmation" %><br />
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :admin, "Is he a administrator" %><br />
    Yes<%= f.radio_button :admin, "true" %>
    No<%= f.radio_button :admin, "false" , :checked => true %>

  </div>
  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>


<% end %>